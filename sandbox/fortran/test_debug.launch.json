    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) sandbox/fortran/test_debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/sandbox/fortran/build/test_debug.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "MIMode": "gdb",
            "miDebuggerPath": "C:/mingw-w64/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
